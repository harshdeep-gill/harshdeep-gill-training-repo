{
  "name": "quarkexpeditions",
  "version": "1.0.0",
  "description": "Custom website for Quark Expeditions",
  "scripts": {
    "start": "npm ci && composer install && npm run build && npm run local-environment:trust-certificate",
    "update": "npm ci && composer install",
    "build": "npm run clear-assets && webpack --config ./webpack.config.js --mode production --env=production && npm run build:php",
    "build:php": "php .bin/build-blade-cache.php",
    "dev": "npm run clear-assets && webpack --config ./webpack.config.js --mode production --env=development --watch",
    "clear-assets": "rm -rf wp-content/themes/quarkexpeditions/dist",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:php",
    "lint:js": "eslint wp-content/themes/quarkexpeditions/src",
    "lint:css": "stylelint wp-content/themes/quarkexpeditions/src",
    "lint:php": "composer lint",
    "test:php": "composer test",
    "static-analysis:php": "composer static-analysis",
    "lint-test": "npm run lint && npm run test:php && npm run static-analysis:php",
    "local-environment:trust-certificate": "sudo security add-trusted-cert -d -r trustRoot -k /Library/Keychains/System.keychain ./.docker/ssl/quarkexpeditions.crt",
    "local-environment:start": "docker compose up -d",
    "local-environment:stop": "docker compose down",
    "local-environment:restart": "npm run local-environment:stop && npm run local-environment:start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Travelopia/quarkexpeditions.git"
  },
  "author": "Travelopia Team",
  "devDependencies": {
    "@travelopia/eslint-plugin-wordpress-coding-standards": "file:./wp-content/mu-plugins/travelopia/travelopia-coding-standards/wordpress/eslint",
    "@types/wordpress__block-editor": "^11.5.8",
    "@types/wordpress__blocks": "^12.5.13",
    "@wordpress/blocks": "^12.25.0",
    "@wordpress/components": "^25.14.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^4.31.0",
    "@wordpress/dom-ready": "^3.48.0",
    "@wordpress/editor": "^13.25.0",
    "@wordpress/element": "^5.25.0",
    "@wordpress/i18n": "^4.48.0",
    "@wordpress/server-side-render": "^4.25.0",
    "@wordpress/stylelint-config": "^21.31.0",
    "autoprefixer": "^10.4.16",
    "classnames": "^2.3.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-notifier": "^1.15.0",
    "webpack-remove-empty-scripts": "^1.0.4",
    "webpack-watched-glob-entries-plugin": "^2.2.6"
  },
  "dependencies": {
    "@travelopia/web-components": "^0.5.22",
    "glightbox": "^3.2.0",
    "normalize.css": "^8.0.1"
  }
}