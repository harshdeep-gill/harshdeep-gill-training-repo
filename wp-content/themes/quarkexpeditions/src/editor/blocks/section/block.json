{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "quark/section",
	"description": "Section block",
	"title": "Section",
	"category": "layout",
	"textdomain": "qrk",
	"supports": {
		"alignWide": false,
		"anchor": true,
		"className": false,
		"html": false,
		"customClassName": false
	},
	"attributes": {
		"anchor": {
			"type": "string",
			"default": ""
		},
		"hasTitle": {
			"type": "boolean",
			"default": true
		},
		"title": {
			"type": "string",
			"default": ""
		},
		"titleAlignment": {
			"type": "string",
			"default": "center"
		},
		"headingLevel": {
			"type": "string",
			"default": "3"
		},
		"hasDescription": {
			"type": "boolean",
			"default": false
		},
		"description": {
			"type": "string",
			"default": ""
		},
		"hasBorder": {
			"type": "boolean",
			"default": true
		},
		"hasBackground": {
			"type": "boolean",
			"default": false
		},
		"backgroundColor": {
			"type": "string",
			"default": "gray",
			"enum": [ "black", "gray" ]
		},
		"hasBackgroundImage": {
			"type": "boolean",
			"default": false
		},
		"backgroundImage": {
			"type": "object"
		},
		"gradientPosition": {
			"type": "string",
			"default": "none"
		},
		"gradientColor": {
			"type": "string",
			"default": "black",
			"enum": [ "black", "grey", "white" ]
		},
		"hasPadding": {
			"type": "boolean",
			"default": false
		},
		"hasCta": {
			"type": "boolean",
			"default": false
		},
		"ctaButton": {
			"type": "object"
		},
		"isNarrow": {
			"type": "boolean",
			"default": false
		},
		"hasHeadingLink": {
			"type": "boolean",
			"default": false
		},
		"headingLink": {
			"type": "object",
			"default": {}
		}
	}
}
