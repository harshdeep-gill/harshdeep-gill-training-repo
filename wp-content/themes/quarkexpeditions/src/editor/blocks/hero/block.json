{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"title": "Hero",
	"name": "quark/hero",
	"description": "Display a hero block.",
	"category": "layout",
	"keywords": [
		"hero"
	],
	"textdomain": "qrk",
	"attributes": {
		"image": {
			"type": "object"
		},
		"immersive": {
			"type": "string",
			"default": "no"
		},
		"contentOverlap": {
			"type": "boolean",
			"default": true
		},
		"textAlign": {
			"type": "string",
			"default": ""
		},
		"overlayOpacity": {
			"type": "number",
			"default": 0
		},
		"syncPostThumbnail": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"alignWide": false,
		"anchor": true,
		"className": false,
		"html": false,
		"customClassName": false
	}
}
