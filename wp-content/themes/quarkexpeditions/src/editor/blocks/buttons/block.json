{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "quark/buttons",
	"title": "Buttons",
	"allowedBlocks": [ "quark/button" ],
	"description": "Display a group of buttons.",
	"category": "text",
	"textdomain": "qrk",
	"supports": {
		"alignWide": false,
		"anchor": false,
		"className": false,
		"html": false,
		"customClassName": false
	},
	"attributes": {
		"horizontalAlignment": {
			"type": "string",
			"default": "left",
			"enum": [ "left", "center", "right", "space-between" ]
		},
		"verticalAlignment": {
			"type": "string",
			"default": "top",
			"enum": [ "top", "middle", "bottom" ]
		}
	}
}
