{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "quark/hero-card-slider",
    "description": "Display a slider of hero cards",
    "title": "Hero Card Slider",
    "keywords": [
      "hero",
      "slider"
    ],
    "parent": [ "quark/column" ],
    "category": "layout",
    "textdomain": "quark",
    "attributes": {
      "showControls": {
        "type": "boolean",
        "default": true
      },
      "transitionType": {
        "type": "string",
        "default": "manual",
        "enum": [ "manual", "auto" ]
      },
      "interval": {
        "type": "number",
        "default": 5
      },
      "items": {
        "type": "array",
        "default": []
      },
	    "isLightbox": {
        "type": "boolean",
        "default": true
      }
    },
    "supports": {
      "alignWide": false,
      "anchor": true,
      "className": false,
      "html": false,
      "customClassName": false
    }
}
