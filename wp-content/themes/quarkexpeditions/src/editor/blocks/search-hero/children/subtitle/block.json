{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"title": "Search Hero - Subtitle",
	"name": "quark/search-hero-subtitle",
	"description": "Subtitle text.",
	"category": "widgets",
	"keywords": [
		"hero",
		"subtitle",
		"text"
	],
	"textdomain": "qrk",
	"attributes": {
		"subtitle": {
			"type": "string",
			"default": ""
		},
		"textColor": {
			"type": "string",
			"default": "black",
			"enum": [
				"white",
				"black"
			]
		},
    "usePromoFont": {
      "type": "boolean",
      "default": false
    }
	},
	"parent": [
		"quark/search-hero-title-container"
	],
	"supports": {
		"alignWide": false,
		"anchor": true,
		"className": false,
		"html": false,
		"customClassName": false
	}
}
